<div class="ly--form-item">
  <strong class="ly--label">Account photo</strong>
  <p class="ly--label-description">only .jpg and .png files. 500kb max file size.</p>
  <div class="ly--file" data-file>
    <label
      for="your-file-importer-id-here"
      class="ly--file-btn ly--btn ly--btn--secondary"
      role="button"
      tabindex="0">Add files</label>
    <input
      type="file"
      class="ly--file-input"
      id="your-file-importer-id-here"
      data-file-uploader
      data-target="[data-file-container]"
      multiple
    />
    <div data-file-container class="ly--file-container"></div>
  </div>
</div>




